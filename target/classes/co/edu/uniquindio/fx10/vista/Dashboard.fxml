<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="contenedorPrincipal" prefHeight="600.0" prefWidth="900.0" spacing="20" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.fx10.controllers.DashboardController">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>


    <HBox alignment="CENTER_LEFT" prefHeight="32.0" prefWidth="625.0" spacing="20">
      <HBox prefHeight="66.0" prefWidth="172.0" />
        <Label fx:id="lblTitulo" alignment="CENTER" prefHeight="66.0" prefWidth="474.0" style="-fx-text-fill: #2c3e50;" text="Dashboard de Motos">
            <font>
                <Font name="System Bold" size="44.0" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
    </HBox>
   <HBox prefHeight="100.0" prefWidth="200.0" />


    <HBox alignment="CENTER_LEFT" prefHeight="198.0" prefWidth="784.0" spacing="20">
      <VBox prefHeight="198.0" prefWidth="122.0" />
        <Button fx:id="btnCrearProducto" onAction="#onCrearProducto" prefHeight="81.0" prefWidth="186.0" style="-fx-background-color: green; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-cursor: hand; -fx-background-radius: 5;" text="Nueva Moto">
            <font>
                <Font name="System Bold" size="11.0" />
            </font>
        </Button>
      <VBox prefHeight="198.0" prefWidth="124.0" />
        <Button fx:id="btnListado" onAction="#onShowlist" prefHeight="80.0" prefWidth="187.0" style="-fx-background-color: #3460d5; -fx-text-fill: #ffffff; -fx-font-size: 14px; -fx-padding: 10 20; -fx-cursor: hand; -fx-background-radius: 5;" text="Listado de Motos" textFill="#f2eeee">
            <font>
                <Font name="System Bold" size="14" />
            </font>
        </Button>
    </HBox>

</VBox>
