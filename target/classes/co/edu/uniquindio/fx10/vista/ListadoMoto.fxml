<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="contenedorListado" spacing="20" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.fx10.controllers.ListadoMotoController">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <Button onAction="#onVolverDashboard" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 5;" text="← Volver al Dashboard" />
        <Region HBox.hgrow="ALWAYS" />
        <Label style="-fx-text-fill: #2c3e50;" text="Listado de motos">
            <font>
                <Font name="System Bold" size="28" />
            </font>
        </Label>
    </HBox>

    <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="15" left="15" right="15" top="15" />
        </padding>

        <Label style="-fx-text-fill: #34495e; -fx-font-size: 16px; -fx-font-weight: bold;" text="Lista de Motos">
            <VBox.margin>
                <Insets bottom="10" />
            </VBox.margin>
        </Label>

        <TableView fx:id="tablaMotos" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colPlaca" prefWidth="181.6000148653984" text="Placa" />
                <TableColumn fx:id="colMarca" prefWidth="211.99990844726562" text="Marca" />
                <TableColumn fx:id="colModelo" prefWidth="186.39999389648438" text="Modelo" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <VBox.margin>
                <Insets top="15" />
            </VBox.margin>
            <Button onAction="#onCrearProducto" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 5;" text="Nueva Moto">
                <font>
                    <Font name="System Bold" size="13" />
                </font>
            </Button>
            <Button fx:id="btnEliminar" onAction="#onEliminarProducto" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 5;" text="Eliminar Moto" />
        </HBox>
    </VBox>
</VBox>
